<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Mall Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .mybrdr {
            border: double;
            border-color: navy;
        }
        #overtop {
            background-color: darkgoldenrod;
            height: 12px;
        }
    </style>
</head>
<body>
    @if (Session["userid"] != null)
    {
        @Html.Partial("shopownernav")

        <div class="container body-content">

            @model IEnumerable<ShoppingProjectA.Models.RequestTable>

            <h2 style="color:navy; text-align:center;">Requests</h2>
            <div class="bdy">
                <div class="mybrdr">
                    @if (Model.Count() > 0)
                    {
                        <div class="mytbl">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Request Id")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Store Number")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Location")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Type")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Shop Owner Name")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Contact Number")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Business Category")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Status")
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RequestId)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.StoreNo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.StoreLoc)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Type)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ShopOwnerName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ContactNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.BusinessCategory)
                                            </td>
                                            <td>
                                                @if (item.Status == "Approved")
                                                {
                                                    <p style="color:green">@Html.DisplayFor(mdoelItem => item.Status)</p>
                                                }
                                                else
                                                {
                                                    <p style="color:darkblue">@Html.DisplayFor(mdoelItem => item.Status)</p>
                                                }

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div>
                            <p style="text-align:center;">No Requests.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    }
    else
    {
        @Html.Partial("sessionexpired");
    }
</body>
</html>


