<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="style.css">
    <title> Shopping Mall Management</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        body {
            padding: 0;
            margin: 0;
            background-color: white;
        }

        .headercontainer {
            top: 0 auto;
        }

        html {
            font-family: "helvetica neue", "Arial", "sans-serif";
        }

        .header1 {
            width: 99%;
            font-size: 55px;
            margin: 0 auto;
            color: navy;
            text-align: center;
        }

        .header2 {
            width: 99%;
            font-size: 55px;
            margin: 0 auto;
            color: cornflowerblue;
            top: 2%;
            text-align: center;
        }

        .upper {
            background-color: green;
            color: white;
            height: 100%;
            padding: 1%;
        }

        .navigation {
            height: 75%;
        }

        #overtop {
            background-color: darkgoldenrod;
            height: 75px;
        }

        .upper li {
            list-style-type: none;
            display: inline;
            font-size: .85em;
            padding-right: 7px;
        }

        .image {
            margin: auto;
        }

        .col-3 {
            color: green;
            float: left;
            width: 50%;
        }

        .buttons {
            border: none;
            background-color: green;
            color: white;
            padding: 18px 20px;
            text-align: center;
            text-decoration: none;
            display: inline;
            font-size: 10px;
            border-radius: 10px;
            margin-top: 30px;
            column-gap: 50px;
        }

        .menu li {
            list-style-type: none;
            display: inline;
            font-size: .85em;
            padding-right: 8px;
        }

        .loginBTN {
            border-radius: 500px;
            text-decoration: none;
            display: inline-block;
            color: white;
        }
 
    </style>
</head>
<body>
    <header>
        <div id="overtop">
            <div style="background-color:green" class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Shopping Mall", "Index", "Home", new { area = "" }, new { @style = "color:white", @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li style="margin-left: 700px; color:white;">@Html.ActionLink("Register", "Index", "Registration", new { area = "" }, new { @style = "color:white" })</li>
                            <li style="margin-left: 30px; color:white;">@Html.ActionLink("Login", "LoginIndex", "Login", new { area = "" }, new { @style = "color:white" })</li>
                            <li style="margin-left: 30px; color:white;">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @style = "color:white" })</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>




































