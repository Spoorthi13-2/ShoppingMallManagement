<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping mall management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        #overtop {
            background-color: darkgoldenrod;
            height: 12px;
        }
    </style>
</head>
<body>
    @if (Session["userid"] != null)
    {
        @Html.Partial("adminnav")

        <div class="container body-content">



            <h2 style="color:navy; text-align:center">Welcome to Admin Page!</h2>
            <hr />
            <div style="color: black;border:double; align-content:center; font-size: 18px;">
                <ul>
                    <li>
                        You can add store details.
                    </li>

                    <li>
                        You can update/edit store details.
                    </li>
                    <li>
                        You can view requests.
                    </li>
                </ul>
            </div>





        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    }
    else
    {
        @Html.Partial("sessionexpired");
    }
</body>
</html>
