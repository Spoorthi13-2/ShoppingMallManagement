<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Mall Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>


        .mybrdr {
            border: double;
            border-color: navy;
        }
            #overtop {
                background-color: darkgoldenrod;
                height: 12px;
            }
        </style>
    </head>
<body>
    @if (Session["userid"] != null)
    {
        @Html.Partial("adminnav")

        @model IEnumerable<ShoppingProjectA.Models.StoreDetails>

        <h2 style="color:navy; text-align:center;">StoreDetails</h2>
        <div class="bdy">
            <div class="mybrdr">


                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Store Number")
                            </th>
                            <th>
                                @Html.DisplayName("Store Location")
                            </th>
                            <th>
                                @Html.DisplayName("Area")
                            </th>
                            <th>
                                @Html.DisplayName("Store Size")
                            </th>
                            <th>
                                @Html.DisplayName("Occupancy Status")
                            </th>
                            <th>
                                @Html.DisplayName("Type")
                            </th>
                            <th>
                                @Html.DisplayName("Amount")
                            </th>
                            <th>
                                @Html.DisplayName("Shop Name")
                            </th>
                            <th>
                                @Html.DisplayName("Business Category")
                            </th>
                            <th>
                                @Html.DisplayName("Agreement Tenure")
                            </th>
                            <th>
                                @Html.DisplayName("Action")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StoreNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StoreLocation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Area)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StoreSize)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OccupancyStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Type)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @if (item.ShopName == null)
                                    {
                                        @Html.DisplayName("NA");
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.ShopName)
                                    }
                                </td>
                                <td>
                                    @if (item.BusinessCategory == null)
                                    {
                                        @Html.DisplayName("NA");
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.BusinessCategory)
                                    }
                                </td>
                                <td>
                                    @if (item.AgreementTenure == null)
                                    {
                                        @Html.DisplayName("0");
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.AgreementTenure)
                                    }
                                </td>
                                <td>
                                    @Html.ActionLink("Update", "UpdateStoreDetails", new { StoreNo = item.StoreNo, StoreSize = item.StoreSize, StoreLocation = item.StoreLocation, Area = item.Area, OccupancyStatus = item.OccupancyStatus, Type = item.Type, Amount = item.Amount, ShopName = item.ShopName, BusinessCategory = item.BusinessCategory, AgreementTenure = item.AgreementTenure })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    }
    else
    {
        @Html.Partial("sessionexpired");
    }
</body>
</html>
